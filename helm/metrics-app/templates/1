apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ include "metrics-app.fullname" . }}
spec:
  replicas: {{ .Values.replicaCount }}
  selector:
    matchLabels:
      app: {{ include "metrics-app.name" . }}
  template:
    metadata:
      labels:
        app: {{ include "metrics-app.name" . }}
    spec:
      containers:
        - name: metrics-app
          image: "{{ .Values.image.repository }}:{{ .Values.image.tag }}"
          ports:
            - containerPort: 8080
          env:
            - name: PASSWORD
              valueFrom:
                secretKeyRef:
                  name: {{ include "metrics-app.fullname" . }}
                  key: password

